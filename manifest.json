{
  "name": "Калькулятор ковров",
  "short_name": "Ковры",
  "description": "Telegram Mini App для расчёта стоимости чистки ковров",
  "version": "1.0.0",
  "manifest_version": 2,
  "start_url": "index.html",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#0088cc",
  "background_color": "#ffffff",
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "categories": ["utilities", "productivity"],
  "lang": "ru",
  "dir": "ltr",
  "scope": "/",
  "permissions": [],
  "features": [
    "cross-origin-isolated"
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Новый расчёт",
      "short_name": "Расчёт",
      "description": "Начать новый расчёт стоимости чистки ковра",
      "url": "index.html",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "telegram": {
    "bot_username": "@carpet_calculator_bot",
    "webapp_url": "https://tamatniy.github.io/carpet-calculator-miniapp/",
    "commands": [
      {
        "command": "start",
        "description": "Запустить калькулятор ковров"
      },
      {
        "command": "help",
        "description": "Помощь по использованию калькулятора"
      }
    ]
  }
}
